    "markdown-it": "^12.0.6",
    "netlify-cli": "^3.37.37",
    "postcss": "^8.3.5",
    "postcss-cli": "^8.3.1",
    "postcss-csso": "^5.0.1",
    "postcss-import": "^14.0.2",
    "simple-git-hooks": "^2.4.1",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "transliteration": "^2.2.0"
  }
