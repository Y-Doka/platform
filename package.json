    "del": "^6.0.0",
    "dotenv": "^10.0.0",
    "esbuild": "^0.12.9",
    "eslint": "^7.29.0",
    "gulp": "^4.0.2",
    "gulp-esbuild": "^0.8.2",
    "gulp-git": "^2.10.1",
    "gulp-postcss": "^9.0.0",
    "gulp-rev": "^9.0.0",
    "gulp-rev-rewrite": "^4.0.0",
    "gulp-shell": "^0.8.0",
    "highlight.js": "^11.2.0",
    "html-escaper": "^3.0.3",
