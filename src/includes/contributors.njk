<section class="contributors">
  <p>Авторы: </p>
  <ul>
      {% for author in authors %}
        <li>
          {{ author }}
        </li>
      {% endfor %}
  </ul>
  {% if contributors %}
    <details>
      <summary>Свой вклад внесли</summary>
      <ul>
          {% for contributor in contributors %}
            <li>
              {{ contributor }}
            </li>
          {% endfor %}
      </ul>
    </details>
  {% endif %}
</section>
