{% macro simpleLogo(children) %}
  <div class="logo font-theme font-theme--code">
    {{ children | safe  }}
  </div>
{% endmacro %}

{% macro linkLogo(children) %}
  <a class="logo font-theme font-theme--code" href="/">
    {{ children | safe  }}
  </a>
{% endmacro %}

{% macro logo(isLink) %}
  {% set logoWrapper = linkLogo if isLink else simpleLogo %}

  {% set children %}
  <div class="logo__image" aria-hidden="true">
    <div class="logo__symbols">U・ᴥ・U</div>
  </div>
  <div class="logo__text {{ 'link' if isLink else '' }}">Дока</div>
  {% endset %}

  {{ logoWrapper(children=children) }}
{% endmacro %}
