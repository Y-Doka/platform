{% macro badgeWithText(badge) %}
  {% if badge.shape == 'gamma-left' %}
    {{ gammaLeftShape(badge) }}
  {% elif badge.shape == 'gamma-right' %}
    {{ gammaRightShape(badge) }}
  {% elif badge.shape == 'line' %}
    {{ lineShape(badge) }}
  {% elif badge.shape == 'short-line' %}
    {{ shortLineShape(badge) }}
  {% elif badge.shape == 'square' %}
    {{ squareShape(badge) }}
  {% elif badge.shape == 'theta' %}
    {{ thetaShape(badge) }}
  {% elif badge.shape == 'zeta-right' %}
    {{ zetaRightShape(badge) }}
  {% elif badge.shape == 'zeta-left' %}
    {{ zetaLeftShape(badge) }}
  {% endif %}
{% endmacro %}

{% macro personBadges(badges, fields) %}
  <div class="person-badges {{ class if class }}">
    {% for badge in badges %}
      <div class="person-badges__sign person-badges__sign--col-{{ badge.field.width }} person-badges__sign--row-{{ badge.field.height }}">
        <div class="person-badges__shape person-badges__shape--{{ badge.shape }} person-badges__shape--height-{{ badge.field.height }} person-badges__shape--width-{{ badge.field.width }} person-badges__shape--angle-{{ badge.angle }}">
          {% if badge.src %}
            <img tabindex="0" aria-describedby="{{ badge.id }}-title {{ badge.id }}-description" class="person-badges__default-image" src="{{ badge.src }}" alt="{{ badge.alt }}">
          {% elif badge.text %}
            {{ badgeWithText(badge) }}
          {% endif %}
        </div>
        {% if badge.description and badge.title %}
          <div class="person-badges__pop-up-container">
            <div class="person-badges__pop-up">
              {% if badge.src %}
                <img class="person-badges__pop-up-image" src="{{ badge.src }}" alt="">
              {% elif badge.text %}
                {{ badgeWithText(badge) }}
              {% endif %}
              <div class="person-badges__pop-up-content">
                <span id="{{ badge.id }}-title" class="person-badges__pop-up-title">{{ badge.title }}</span>
                <p id="{{ badge.id }}-description" class="person-badges__pop-up-description font-theme font-theme--code">{% parseAndInsert badge.description, fields %}</p>
              </div>
            </div>
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
{% endmacro %}
