<fieldset class="search-category">
  <legend class="visually-hidden" aria-hidden="true">Фильтровать по:</legend>
  <div class="search-category__legend">Фильтровать по:</div>

  {% for category in collections.articleIndexes %}
    <label class="search-category__item tag" style="--accent-color: var(--color-{{ category.fileSlug }})">
      <input class="tag__control" type="radio" name="search-category" value="category:{{ category.fileSlug }}" form="search-form">
      <span class="tag__text">
        {{ category.data.name }}
      </span>
    </label>
  {% endfor %}
</fieldset>
