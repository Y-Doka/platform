{% set sections = [{
  title: 'HTML',
  path: 'html'
},{
  title: 'CSS',
  path: 'html'
},{
  title: 'JavaScript',
  path: 'js'
},{
  title: 'Инструменты',
  path: 'tools'
}] %}

{% for section in sections %}
  {% if page.url !== '/all/'%}<details><summary>{% endif %}
  {% if page.url === '/all/'%}<h2>{% endif %}


  {{section.title}}

  {% if page.url !== '/all/'%}</summary>{% endif %}
  {% if page.url === '/all/'%}</h2>{% endif %}

  {% for type in ['js', 'css', 'html', 'tools'] %}
   {% if section.path == type %}
     <ul>
       {% for post in collections[type] %}
         <li><a href="{{ post.url }}">{{ post.data.title }}</a></li>
       {% endfor %}
     </ul>
     {% endif %}
  {% endfor %}

  {% if page.url !== '/all/'%}</details>{% endif %}
{% endfor %}
