{% set categoryList = {
  html: 'HTML',
  css: 'CSS',
  js: 'JavaScript',
  tools: 'Инструменты'
} %}

{% for path, categoryName in categoryList %}
  {% if path in page.url %}
    {% set category = categoryName %}
  {% endif %}
{% endfor %}

<meta charset="utf-8">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="robots" content="index, nofollow">
<title>
  {% filter escape %}
    {{ title }}
    {% if page.url != '/' %}
      — {{ meta.title }}
    {% endif %}
  {% endfilter %}
</title>
<meta itemprop="name" content="{{ title }}{{ meta.title if page.url != '/' }}">
<meta itemprop="description" content="{{ meta.description if meta.description }}">
<meta itemprop="image" content="{{ meta.cover.desktop if meta.cover }}">
<meta property="og:type" content="article">
<meta property="og:url" content="https://doka.guide{{ page.url }}">
<meta property="og:locale" content="ru_RU">
<meta property="og:title" content="{{ title }}{{ meta.title if page.url != '/' }}">
<meta property="og:description" content="{{ meta.description if meta.description }}">
<meta property="og:image" content="{{ meta.cover.desktop if meta.cover }}">
<meta property="og:image:alt" content="{{ meta.cover.alt if meta.cover }}">
<meta property="og:site_name" content="Дока">
<meta property="article:section" content="Technology">
<meta property="article:opinion" content="false">
<meta property="article:tag" content="{{ category }}">
<meta property="article:tag" content="{{ meta.tags[0] if meta.tags }}">
<meta property="twitter:card" content="summary">
<meta property="twitter:site" content="@doka_guide">
<meta property="twitter:title" content="{{ title }}{{ meta.title if page.url != '/' }}">
<meta property="twitter:description" content="{{ meta.description if meta.description }}">
<meta property="twitter:image:alt" content="{{ meta.cover.alt if meta.cover }}">
<meta property="twitter:image" content="{{ meta.cover.desktop if meta.cover }}">
<meta name="color-scheme" content="light dark">
<link rel="canonical" href="https://doka.guide{{ page.url }}">
<link rel="stylesheet" href="/styles/index.css">
<link rel="stylesheet" href="/styles/dark-theme.css" media="(prefers-color-scheme: dark)">
