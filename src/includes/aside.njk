<aside class="aside">

  <header class="header">
    <a href="/">
      {% include "ui/logo.njk" %}
    </a>
  </header>

  <nav>
    <ul>
      <!-- выводит все посты -->
      {% for post in collections.all %}
        {% if post.data.title %}
          <li><a href="{{ post.url }}">{{ post.data.title }}</a></li>
        {% endif %}
      {% endfor %}
    </ul>
  </nav>

  <div class="aside__footer">
    {% include "footer.njk" %}
    <button class="aside__arrow-btn" type="button" aria-label="Скрыть навигацию"></button>
  </div>
</aside>
