<!DOCTYPE html>
<html
  class="base font-theme"
  lang="{{ meta.lang }}"
  itemscope itemtype="https://schema.org/{{ pageType }}"
  {% if category %}style="--accent-color: var(--color-{{ category }}); --accent-base-color: var(--color-base-{{ category }});"{% endif %}
>
  <head>

    {% include "meta.njk" %}

  </head>
  <body class="base__body {{ bodyClass }}">

    {% if env.isProdEnv %}
      {% include "analytics/metrika.njk" %}
      {% include "analytics/google.njk" %}
    {% endif %}

    {{ content | safe }}

    <script type="module" src="/scripts/index.js"></script>
  </body>
</html>
