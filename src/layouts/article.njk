<!DOCTYPE html>
<html class="base" lang="{{ meta.lang }}">
  <head>

    {% include "meta.njk" %}

  </head>
  <body class="base__body aside-page">

    {% include "blocks/aside.njk" %}

    <main>
      <div class="aside-page__content base__container">

        <article>
          {% if cover %}
            <picture>
              {% if cover.mobile %}
              <source srcset="{{ cover.mobile }}" media="(max-width: 425px)">
              {% endif%}
              <img src="{{ cover.desktop }}" width="900" height="537" alt="{{ cover.alt }}">
            </picture>
          {% endif%}

          <h1>{{ title }}</h1>
          <a href="{% contentRepLink %}/blob/main{{ page.url }}" target="_blank">
            Отредактировать на GitHub
          </a>

          <p>{% lastModified page.date %}</p>

          {% for tag in tags | filterTagListStubOnly %}
            {% include "stub.njk" %}
          {% endfor %}

          {{ content | safe }}

        </article>

        {% include "practices.njk" %}

        {% include "contributors.njk" %}

        {% include "feedback-form.njk" %}

      </div>
    </main>

  </body>
  <script type="module" src="/scripts/index.js"></script>
</html>
