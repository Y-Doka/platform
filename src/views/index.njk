<main>
  <div class="container">
    <section class="articles-gallery">
      <h2 class="visually-hidden">Избранные статьи</h2>

      <ul class="featured-artices-list base-list">
        {% for article in featuredArticles %}
          {% set isHidden = loop.index > featuredArticlesPageSize %}
          {% if isHidden %}
            <template>
              <li class="featured-artices-list__item">
                {{ featuredArticle(article=article) }}
              </li>
            </template>
          {% else %}
            <li class="featured-artices-list__item">
              {{ featuredArticle(article=article) }}
            </li>
          {% endif %}
        {% endfor %}
      </ul>
      <button class="articles-gallery__more-button button" type="button">Показать ещё</button>
    </section>

    <section class="materials-collection">
      <h2 class="visually-hidden">Подборки материалов</h2>

      <ul class="article-indexes-list base-list">
        {% for sectionIndex in collections.articleIndexes %}
          <li class="article-indexes-list__item">
            <h3 class="article-indexes-list__title" style="--accent-color: var(--color-base-{{ sectionIndex.fileSlug }})">
              <a class="article-indexes-list__link" href="/{{ sectionIndex.fileSlug }}/">
                {{ sectionIndex.data.name }}
              </a>
            </h3>
            <ul class="index-group-list base-list">
              {% for group in sectionIndex.data.groups %}
                <li class="index-group-list__item">
                  <a class="index-group-list__link link" href="#404">{{ group.name }}</a>
                </li>
              {% endfor %}
            </ul>
          </li>
        {% endfor %}
      </ul>
    </section>
  </div>
</main>

{% include "blocks/footer.njk" %}
