---
layout: 'base.njk'
permalink: '/search.html'
title: 'Дока — Поиск'
---
{% macro divider() %}
  <span class="header__divider font-theme font-theme--code" aria-hidden="true"></span>
{% endmacro %}

{% macro linkLogo(children) %}
  <a class="header__logo link" href="/">
    {{ children | safe  }}
  </a>
{% endmacro %}

{% set logo %}
  {% include "blocks/logo.njk" %}
  {{ divider() }}
{% endset %}

{% set isMainPage = page.url === '/' %}

{% set logoWrapper = linkLogo %}

<header class="header {% if isMainPage %}header--open{% endif %}">
  {{ logoWrapper(children=logo) }}

  {% include "blocks/search.njk" %}
</header>

<aside>
  {% include "blocks/search-category.njk" %}
  {% include "blocks/search-tags.njk" %}
</aside>

<main>
  <div class="container">
    <div class="hits">
      {% include "blocks/search-hits.njk" %}
    </div>
  </div>
</main>

{% include "blocks/footer.njk" %}
